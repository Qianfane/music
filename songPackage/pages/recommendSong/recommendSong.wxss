/* pages/recommendSong/recommendSong.wxss */
/* 头部 */
.recommentSongContainer .header {
  position: relative;

  width: 100%;
  height: 300rpx;

}

.recommentSongContainer .header image {
  width: 100%;
  height: 100%;
}

.recommentSongContainer .header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -50rpx;
  margin-left: -150rpx;

  width: 300rpx;
  height: 100rpx;

  text-align: center;
  line-height: 100rpx;
  color: white;
}

/* 列表区域 */
.listContainer {
  padding: 0 20rpx;
  position: relative;
  top: -20rpx;
  background-color: white;
  border-radius: 30rpx;
}
.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}

.listHeader .changeMore {

  float: right;
}

/* 内容区 */
.scrollContainer {
  height: calc(100vh - 380rpx);

}

.scrollItem {
  display: flex;

}

.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.musicItem {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.musicItem text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}



